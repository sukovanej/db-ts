{
  "compilerOptions": {
    /* Basic Options */
    "incremental": true,
    "target": "es2021",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./packages",
    "composite": true,
    "disableSourceOfProjectReferenceRedirect": true,
    "esModuleInterop": true,
    "sourceMap": true,

    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "useUnknownInCatchVariables": true,

    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "esModuleInterop": true,

    "sourceMap": true,
    "declarationMap": true,
    
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },

  "exclude": [
    "node_modules",
    "lib",
    "dist"
  ],

  "files": [],

  "references": [
    { "path": "./packages/db-ts/tsconfig.build.json" },
    { "path": "./packages/db-ts-postgres/tsconfig.build.json" },
  ]
}
